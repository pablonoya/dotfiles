{
  "codesnap.showWindowTitle": true,
  "codesnap.target": "window",
  "codesnap.transparentBackground": true,

  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.bracketPairColorization.enabled": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.definitionLinkOpensInPeek": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "'JetBrains Mono Slashed', 'JetBrainsMono Nerd Font', 'JetBrains Mono', 'Manrope Medium', Manrope, Inter, 'Noto Sans'",
  "editor.fontLigatures": "'zero'",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.lineHeight": 1.6,
  "editor.linkedEditing": true,
  "editor.minimap.autohide": true,
  "editor.minimap.maxColumn": 101,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 1,
  "editor.overviewRulerBorder": false,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [101],
  "editor.stickyScroll.enabled": true,
  "editor.suggest.preview": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 101,

  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "**/*.html": "html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/templates/**/*": "django-txt",
    "**/templates/**/*.html": "django-html"
  },
  "files.autoSave": "off",
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": "all",
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,

  "javascript.updateImportsOnFileMove.enabled": "always",

  "luahelper.format.align_args": true,
  "luahelper.format.break_after_functioncall_lp": true,
  "luahelper.format.break_after_functiondef_lp": true,
  "luahelper.format.break_after_table_lb": true,
  "luahelper.format.break_before_functioncall_rp": true,
  "luahelper.format.break_before_functiondef_rp": true,
  "luahelper.format.break_before_table_rb": true,
  "luahelper.format.chop_down_parameter": true,
  "luahelper.format.column_limit": 100,

  "markdown.preview.fontFamily": "Manrope, 'Noto Sans', -apple-system, system-ui, sans-serif",

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 101,
  "prettier.semi": false,

  "security.workspace.trust.untrustedFiles": "open",

  "terminal.external.linuxExec": "wezterm-gui",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.tabs.hideCondition": "singleGroup",
  "terminal.integrated.shellIntegration.history": 700,
  "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",

  "vscode-pets.petSize": "medium",
  "vscode-pets.throwBallWithMouse": true,
  "window.title": "${rootName}: ${dirty}${activeEditorMedium}",
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "git-rebase-todo": "default"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.sideBar.location": "right",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "breadcrumbs.enabled": false,
  "black-formatter.importStrategy": "fromEnvironment",
  "editor.inlineSuggest.enabled": true,
  "explorer.confirmDelete": false,
  "github.copilot.enable": {
    "scminput": true,
    "markdown": true
  },
  "isort.args": ["--profile", "black"],

  "remote.autoForwardPortsSource": "hybrid",
  "ruff.organizeImports": false,

  "terminal.integrated.enableVisualBell": true,
  "window.commandCenter": false,

  "oxc_language_server.enable": true,
  "oxc_language_server.trace.server": "verbose",
  "python.analysis.extraPaths": [],
  "workbench.colorTheme": "seramuriana",
  "scm.experimental.showHistoryGraph": true,
  "window.menuBarVisibility": "toggle",
  "python.analysis.autoFormatStrings": true,
  "color-highlight.markRuler": false,
  "python.diagnostics.sourceMapsEnabled": true,
  "ruff.lineLength": 100,
  "workbench.layoutControl.enabled": false
}
